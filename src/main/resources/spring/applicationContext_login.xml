<?xml version="1.0" encoding="UTF-8"?>
<beans
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="LoginAction" class="module.login.action.LoginAction">
		<property name="verification" ref="verification"/>
		<property name="loginService" ref="loginService"/>
	</bean>

	<bean id="loginService" class="module.login.service.LoginServiceImpl">
		<property name="userDao" ref="baseUserDao"/>
	</bean>

</beans>