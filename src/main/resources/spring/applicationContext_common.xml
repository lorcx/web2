<?xml version="1.0" encoding="UTF-8"?>
<beans
        xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:p="http://www.springframework.org/schema/p"
        xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
       <!-- util start -->

        <!-- 验证码工具类 -->
        <bean id="verification" class="util.verification"/>

        <!--文件上传action-->
        <bean id="fileUpload" class="util.upload.FileUpload">
            <property name="userService" ref="baseUserService"/>
        </bean>

        <!--文件上传servelt-->
        <bean id="uploadFileServelt" class="servlet.upload.UploadFileServlet">
            <property name="userService" ref="baseUserService"/>
        </bean>

       <!-- util end -->
</beans>